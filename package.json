{
  "name": "podcast-manager-api",
  "version": "1.0.0",
  "description": "TypeScript Node.js API for podcast management without frameworks",
  "main": "dist/server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup src --format cjs --target node18",
    "start": "node dist/server.js",
    "dev": "tsx watch --env-file=.env src/server.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["podcast", "api", "typescript", "node"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.28",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2"
  }
}
